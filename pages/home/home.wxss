@import '../../components/_button/_button.wxss';
@import '../../components/clock/clock.wxss';
@import '../../components/confirm/confirm.wxss';

    
.home-container {
  height: 100vh;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}

.tomato-wrapper {
  padding: 0 20rpx;
  margin-top: 40rpx;
}

.tomato-wrapper .tomato {
  background: #eef7f6;
  border-radius: 8rpx;
  box-shadow: 0px 2px 8px 0px rgba(0, 0, 0, 0.10);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.createButton {
  margin: 0 auto;
}

.todoList {
  flex: 1;
  padding: 13rpx 20rpx;
  color: #333;
  font-size: 28rpx;
  box-sizing: border-box;
  min-height: 552rpx;
}

.todoList .item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 8rpx;
  padding: 17rpx 50rpx;
  margin-bottom: 24rpx;
}

.todoList .item:last-child {
  margin: 0;
}

.todoList .item text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.todoList .item .select {
  border-radius: 50%;
  width: 28rpx;
  height: 28rpx;
  border: 4rpx solid #fe996f;
  margin-right: 30rpx;
  position: relative;
}

.todoList .item .select.active::before {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #fe996f;
}